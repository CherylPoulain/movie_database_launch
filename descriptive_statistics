_Query for statistics on rental rate_

SELECT min(rental_rate) AS min_rent,
max(rental_rate) as max_rent,
avg(rental_rate) as avg_rent
FROM film


_Query for statistics on film length_

SELECT MIN(length) AS min_length,
MAX (length) AS max_length,
AVG(length) AS avg_length
FROM film


_Query for statistics on rental duration_

SELECT MIN(rental_duration) AS min_duration,
MAX (rental_duration) AS max_duration,
AVG(rental_duration) AS avg_duration
FROM film


_Query for statistics on replacement cost_

SELECT MIN(replacement_cost) AS min_replacement_cost,
MAX (replacement_cost) AS max_replacement_cost,
AVG(replacement_cost) AS avg_replacement_cost
FROM film

_Query for finding mode of film rating_

SELECT mode() WITHIN GROUP (ORDER BY rating) 
AS modal_value
FROM film


_Query for finding mode of language ID_
SELECT mode() WITHIN GROUP (ORDER BY language_id) 
AS modal_value
FROM film


_Query for finding mode of release year_
SELECT mode() WITHIN GROUP (ORDER BY release_year) 
AS modal_value
FROM film


_Query for finding mode of customer profile created date_
SELECT mode() WITHIN GROUP (ORDER BY create_date) 
AS modal_value
FROM customer
