_'Read' what film genres already exist in the category table_

SELECT*
FROM category



_'Create' new genres_

INSERT INTO category (name)
VALUES('Thriller') 

INSERT INTO category (name)
VALUES('Crime')



_'Update' film's genre_

SELECT film_id
FROM film
WHERE title = ('African Egg')

SELECT category_id
FROM film_category
WHERE film_id = 5

UPDATE film_category
SET category_id = 17
WHERE film_id= 5



_'Delete' film category_
DELETE FROM category
WHERE category_id = 19
